{
  "name": "defts",
  "type": "module",
  "version": "0.0.0",
  "description": "Create a project with TypeScript as the default language.",
  "author": {
    "name": "hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "license": "MIT",
  "keywords": [
    "cli",
    "create-typescript-project"
  ],
  "bin": {
    "defts": "index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "unbuild --stub",
    "build": "unbuild",
    "build:out": "tsc -p tsconfig.build.json",
    "commit": "git-cz",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "lint": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@hacxy/eslint-config": "^0.0.4",
    "@types/node": "^20.12.5",
    "bumpp": "^9.9.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "eslint": "^9.16.0",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "unbuild": "^2.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/git-hooks/commit-msg.mjs"
  },
  "lint-staged": {
    "*": [
      "eslint . --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": false
    }
  }
}
